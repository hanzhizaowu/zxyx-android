<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout

        android:id="@+id/feed_video_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            app:srcCompat="@drawable/ic_message"
            android:layout_width="@dimen/spacing_16"
            android:layout_height="@dimen/spacing_16"
            android:contentDescription="@string/nav_video"
            android:focusable="false"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/video_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_16"
            android:layout_marginLeft="@dimen/spacing_10"
            android:gravity="center"
            android:text="@string/zero_num"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</layout>